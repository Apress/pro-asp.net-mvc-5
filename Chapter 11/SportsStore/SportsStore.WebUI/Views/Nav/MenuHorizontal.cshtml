@model IEnumerable<string>

<div class="btn-group btn-group-sm btn-group-justified m-2">
    @Html.ActionLink("Home", "List", "Product", null, 
        new { @class = "btn btn-outline-secondary btn-sm" })

    @foreach (var link in Model) {
        @Html.RouteLink(link, new {
           controller = "Product",
           action = "List",
           category = link,
           page = 1,
           @class = "nav-link"
       }, new {
           @class = "btn btn-sm "
                + (link == ViewBag.SelectedCategory ? " btn-primary" : " btn-outline-secondary")
       })
    }
</div>
