@model IEnumerable<string>

@Html.ActionLink("Home", "List", "Product", null,
    new { @class = "d-block btn btn-outline-secondary btn-lg m-2" })

@foreach (var link in Model)
{
    @Html.RouteLink(link, new {
        controller = "Product",
        action = "List",
        category = link,
        page = 1
    }, new {
        @class = "d-block btn btn-lg m-2 "
            + (link == ViewBag.SelectedCategory ? " btn-primary" : " btn-outline-secondary")
    })
}
